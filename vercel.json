{
    "version": 2,
    "builds": [
        {
            "src": "server.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.py"
        },
        {
            "src": "/(.*)",
            "dest": "public/index.html"
        }
    ],
    "functions": {
        "server.py": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "env": {
        "PYTHONUNBUFFERED": "1"
    }
}
